@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KiotViet - Giao diện mẫu</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
    <!--<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
          integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/AdminStyle.css">
</head>
<body style="background-color: #e8eaed;">
    <div class="bg-white py-2" >
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="logoImg col-3 p-0 m-0">
                </div>
                <div class="col-9 p-0 m-0 d-flex justify-content-end align-items-center" style="color:black">
                    <div class="nav-item active">
                        <a class="nav-link d-flex align-items-baseline" href="#">
                            <i class="fa-solid fa-car-side"></i>
                            <p class="m-1">Giao hàng</p>
                        </a>
                    </div>
                    <div class="nav-item active">
                        <a class="nav-link d-flex align-items-baseline" href="#">
                            <i class="fa-solid fa-car-side"></i>
                            <p class="m-1">Vay vốn</p>
                        </a>
                    </div>
                    <div class="nav-item active">
                        <a class="nav-link d-flex align-items-baseline" href="#">
                            <i class="fa-solid fa-car-side"></i>
                            <p class="m-1">Thanh toán</p>
                        </a>
                    </div>
                    <div class="nav-item active">
                        <a class="nav-link d-flex align-items-baseline" href="#">
                            <i class="fa-solid fa-car-side"></i>
                            <p class="m-1">Nguồn giá tốt</p>
                        </a>
                    </div>
                    <div class="nav-item active">
                        <a class="nav-link d-flex align-items-baseline" href="#">
                            <i class="fa-solid fa-car-side"></i>
                            <p class="m-1">Giao hàng</p>
                        </a>
                    </div>
                    <div class="nav-item active">
                        <a class="nav-link d-flex align-items-baseline" href="#">
                            <i class="fa-solid fa-car-side"></i>
                            <p class="m-1">Chủ đề</p>
                        </a>
                    </div>
                    <div class="nav-item active">
                        <a class="nav-link d-flex align-items-baseline" href="#">
                            <i class="fa-solid fa-car-side"></i>
                            <p class="m-1">Hỗ trợ</p>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link d-flex align-items-baseline" href="#">
                            <i class="fas fa-user-circle"></i>
                            @{
                                if (HttpContextAccessor.HttpContext.Session.GetInt32("AID").HasValue)
                                {
                                    <p class="m-1">admin: @HttpContextAccessor.HttpContext.Session.GetString("AName")</p>
                                }
                                else
                                {
                                    <p class="m-1">bạn chưa đăng nhập</p>
                                }
                            }
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 bg-primary">
        <div class="row">
            <div class="col-10 p-0 m-0 d-flex align-items-center" style="color:white">
                <div class="">
                    <a class="nav-link d-flex align-items-baseline" href="#" style="text-decoration:none; color:white">
                        <i class="fa-solid fa-car-side"></i>
                        <p class="m-1">Tổng quan</p>
                    </a>
                </div>
                <div class="">
                    <a class=" nav-link d-flex align-items-baseline" href="@Url.Action("Index", "Products", new { area = "Admin" })" style="text-decoration:none; color:white">
                        <i class="fa-solid fa-car-side"></i>
                        <p class="m-1">Hàng hóa</p>
                    </a>
                </div>
                <div class="">
                    <a class="nav-link d-flex align-items-baseline" href="#" style="text-decoration:none; color:white">
                        <i class="fa-solid fa-car-side"></i>
                        <p class="m-1">Giao dịch</p>
                    </a>
                </div>
                <div class="">
                    <a class="nav-link d-flex align-items-baseline" href="@Url.Action("Index", "Employee", new { area = "Admin" })" style="text-decoration:none; color:white">
                        <i class="fa-solid fa-car-side"></i>
                        <p class="m-1">Nhân viên</p>
                    </a>
                </div>
                <div class="">
                    <a class="nav-link d-flex align-items-baseline" href="#" style="text-decoration:none; color:white">
                        <i class="fa-solid fa-car-side"></i>
                        <p class="m-1">Sổ quỹ</p>
                    </a>
                </div>
                <div class="">
                    <a class="nav-link d-flex align-items-baseline" href="#" style="text-decoration:none; color:white">
                        <i class="fa-solid fa-car-side"></i>
                        <p class="m-1">Báo cáo</p>
                    </a>
                </div>
                <div class="">
                    <a class="nav-link d-flex align-items-baseline" href="#" style="text-decoration:none; color:white">
                        <i class="fa-solid fa-car-side"></i>
                        <p class="m-1">Bán hàng online</p>
                    </a>
                </div>
            </div>
            <div class="col-2 p-0 m-0 d-flex justify-content-end align-items-center" style="color:white">
                <div class="">
                    <a class="nav-link d-flex align-items-baseline" href="#" style="text-decoration:none; color:white">
                        <i class="fa-solid fa-car-side"></i>
                        <p class="m-1">Bán hàng</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
